{% extends 'base.html.twig' %}

{% block title %}Dodaj notatkę{% endblock %}

{% block body %}
<div class="ml-64">
    <!-- Nagłówek strony -->
    <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="px-6 py-4">
            <h1 class="text-2xl font-semibold text-gray-900">
                <i class="fas fa-plus-circle text-cordes-accent mr-2"></i>
                Dodaj nową notatkę
            </h1>
            <p class="text-gray-600 text-sm mt-1">Wypełnij formularz, aby dodać nową notatkę</p>
        </div>
    </header>
</div> 

<!-- Główna zawartość -->
<div class="bg-cordes-light rounded-lg shadow p-6 ml-72 mt-6 mr-6 max-w-3xl">
  

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <!-- Pole: Tytuł -->
        <div>
            {{ form_label(form.Title, 'Tytuł notatki', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.Title, {
                'attr': {
                    'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-cordes-accent focus:ring focus:ring-cordes-accent focus:ring-opacity-50'
                }
            }) }}
            {{ form_errors(form.Title) }}
        </div>

        <!-- Pole: Treść -->
        <div>
            {{ form_label(form.Text, 'Treść notatki', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.Text, {
                'attr': {
                    'rows': 15,
                    'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-cordes-accent focus:ring focus:ring-cordes-accent focus:ring-opacity-50'
                }
            }) }}
            {{ form_errors(form.Text) }}
        </div>

        <!-- Przyciski akcji -->
        <div class="flex justify-between items-center">
            <a href="{{ path('app_notes') }}" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-md transition">
                <i class="fas fa-arrow-left mr-2"></i> Powrót
            </a>
            <button type="submit" class="px-6 py-2 bg-cordes-accent text-white rounded-md shadow hover:bg-blue-700 transition">
                <i class="fas fa-save mr-2"></i> Zapisz
            </button>
        </div>

    {{ form_end(form) }}
</div>
{% endblock %}
