{% extends 'base.html.twig' %}

{% block title %}Notatka: {{ note.title }}{% endblock %}

{% block body %}
<div class="ml-64">
    <!-- Nagłówek z nawigacją -->
    <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="px-6 py-4 flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-semibold text-gray-900">
                    <i class="fas fa-sticky-note mr-2 text-cordes-accent"></i>
                    Szczegóły notatki
                </h1>
                <p class="text-gray-600 text-sm mt-1">Podgląd treści notatki</p>
            </div>
            <div class="flex space-x-2">
                <a href="{{ path('app_notes') }}"
                   class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-md transition flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i> Lista notatek
                </a>
                <a href="{{ path('app_notes_create') }}"
                   class="px-4 py-2 bg-cordes-accent text-white rounded hover:bg-blue-700 transition flex items-center">
                    <i class="fas fa-plus"></i><span class="ml-2">Nowa notatka</span>
                </a>
                <a href="#"
                   class="px-4 py-2 bg-cordes-accent text-white rounded hover:bg-blue-700 transition flex items-center">
                    <span class="ml-2">Edytuj</span>
                </a>
                <a href="#"
                   class="px-4 py-2 bg-red-500 text-white rounded hover:bg-blue-700 transition flex items-center">
                    <span class="ml-2">Usuń</span>
                </a>
            </div>
        </div>
    </header>
</div>

<!-- Zawartość notatki -->
<div class="bg-cordes-light rounded-lg shadow p-8 ml-72 mt-6 mr-6 max-w-3xl">
    <h2 class="text-xl font-bold text-cordes-dark mb-2">
        <i class="fas fa-book mr-2 text-cordes-blue"></i>
        {{ note.title }}
    </h2>
    <p class="text-gray-500 text-sm mb-6">
        Dodano: {{ note.created ? note.created|date('Y-m-d H:i') : '' }}
    </p>
    <div class="prose max-w-none text-gray-800 break-words">
        {{ note.text|nl2br }}
    </div>
</div>
{% endblock %}
